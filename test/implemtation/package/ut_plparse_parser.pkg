    ----------------------------------------------------------------------------
    PROCEDURE functionDef2(D VARCHAR2) IS
         -- NoFormat Start
        l_sourceLines plparse.source_lines_type := plparse.source_lines_type(
            'FUNCTION fncWithoutParams (p integer) RETURN PLS_INTEGER IS' || chr(10),
            'BEGIN' || chr(10),
            '    RETURN NULL;' || chr(10),
            'END fncWithoutParams;'
        );
        -- NoFormat End
